{
  "name": "aida-server",
  "version": "0.4.0",
  "private": true,
  "description": "Server to control all requests directed to my IoT devices in home",
  "main": "src/server.ts",
  "author": "Nikhil Warke <nwarke@protonmail.com>",
  "license": "MIT",
  "repository": "https://github.com/nickdex/AIDA-Server.git",
  "bugs": {
    "url": "https://github.com/nickdex/AIDA-Server/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "tsc -p tsconfig.release.json",
    "dev": "ts-node-dev --inspect=0.0.0.0:5858 ./src/server.ts",
    "lint": "tslint -t stylish --fix --project \"tsconfig.json\"",
    "pretest": "yarn lint",
    "test": "yarn test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@feathersjs/express": "^1.3.1",
    "@feathersjs/feathers": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "feathers-pouchdb": "nickdex/feathers-pouchdb",
    "lodash": "^4.17.14",
    "morgan": "^1.9.1",
    "mqtt": "^3.0.0",
    "pouchdb-adapter-http": "^7.1.1",
    "pouchdb-core": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "triple-beam": "^1.3.0",
    "typescript": "^3.5.3",
    "web-push": "^3.3.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/feathersjs__express": "^1.1.6",
    "@types/feathersjs__feathers": "^3.1.5",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.6.2",
    "@types/pouchdb": "^6.4.0",
    "@types/pouchdb-adapter-http": "^6.1.3",
    "@types/pouchdb-core": "^7.0.3",
    "@types/pouchdb-find": "^6.3.4",
    "@types/triple-beam": "^1.3.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "~6.2.0",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add"
    ]
  }
}
